---
import Details from 'components/Details.astro';
import { Languages, PageNames, Pages } from 'data/enum';
import { getI18nCopy, getI18nUrl } from 'data/i18n';
import Layout from 'layouts/Layout.astro';

interface Props {
  lang?: Languages;
}

const { lang = Languages.en } = Astro.props;
const { title, description } = getI18nCopy(lang)[PageNames.About];
---

<Layout path={Pages.About} title={title} description={description} lang={lang}>
  <Details lang={lang} pageName={PageNames.About} nextPageName="Index" href={getI18nUrl(lang, Pages.Index)} />
</Layout>
