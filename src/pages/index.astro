---
import { l, t } from 'astro-i18n';
import Controls from '~components/Controls';
import Details from '~components/Details.astro';
import { PageNames, Pages } from '~data/enum';
import Layout from '~layouts/Layout.astro';

interface Props {}

const title = t('meta_title');
const description = t('meta_description');

const pageName = PageNames.Index;
const nextPageName = PageNames.About;
const nextHref = Astro.url.origin + l(Pages.About);
---

<Layout title={title} description={description}>
  <Details pageName={pageName} nextPageName={nextPageName} href={nextHref} />
  <Controls client:load />
</Layout>
